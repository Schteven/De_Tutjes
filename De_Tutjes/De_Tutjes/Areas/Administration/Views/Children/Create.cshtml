<script type="text/javascript">

    var isLivingTogether = true;

    function toggleLivingTogether() {
        if (isLivingTogether) {
            isLivingTogether = false;
        } else {
            isLivingTogether = true;
        }
    }

    function syncTelephoneNumber(input) {
        if (isLivingTogether) {
            var telFirstParent = document.getElementById('firstParentPhoneHome');
            var telSecondParent = document.getElementById('secondParentPhoneHome');
            if (input.getAttribute('id') == 'firstParentPhoneHome') {
                telSecondParent.value = telFirstParent.value;
            } else {
                telFirstParent.value = telSecondParent.value;
            }
        }
    }

    function syncThisField(field) {
        if (isLivingTogether) {
            var fromThis = field.getAttribute('id');
            var toThis = fromThis.replace("first", "second");

            document.getElementById(toThis).value = document.getElementById(fromThis).value;
        }
    }

    function showMe(input, box) {
        var chboxs = document.getElementsByName(input);
        var vis = "none";
        for (var i = 0; i < chboxs.length; i++) {
            if (!chboxs[i].checked) {
                vis = "block";
                break;
            }
        }
        document.getElementById(box).style.display = vis;
    }

    function hideMe(input, box) {
        var chboxs = document.getElementsByName(input);
        var vis = "block";
        for (var i = 0; i < chboxs.length; i++) {
            if (!chboxs[i].checked) {
                vis = "none";
                break;
            }
        }
        document.getElementById(box).style.display = vis;
    }

    function enlightenMe(box) {
        document.getElementById("ff").className = "btn btn-default";
        document.getElementById("mf").className = "btn btn-default";
        document.getElementById("mm").className = "btn btn-default";
        document.getElementById(box).className = "btn btn-primary";
    }

</script>
