@model De_Tutjes.Areas.Administration.Models.CreateToddlerOverview

<script>
    $(function () {
        $('#toddler_Person_BirthDate').combodate({
            minYear: 2015,
            maxYear: 2020
        });
    });
</script>

@using (Ajax.BeginForm("CreateToddler", null, new AjaxOptions { UpdateTargetId = "toddlerList", OnSuccess = "submitToddlerForm()" }, new { id = "AddToddlerForm" }))
{

    @Html.AntiForgeryToken();


    <div class="modal fade" id="addToddlerModal" tabindex="-1" role="dialog" aria-labelledby="addToddlerLabel" aria-hidden="true">
        @{ 
            int toddlerId = 0;
            if (HttpContext.Current.Session["NewChildWizardSession"] != null)
            {
                toddlerId = int.Parse(HttpContext.Current.Session["NewChildWizardSession"].ToString());
            }

        }
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addToddlerLabel">
                        Kind @HttpContext.Current.Session["NewChildWizardSession"] toevoegen 
                        <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </h5>

                </div>
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <fieldset>
                        <legend>Personal</legend>
                        <div class="form-group">
                            @Html.LabelFor(model => model.toddler.Person.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.toddler.Person.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.toddler.Person.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.toddler.Person.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.toddler.Person.BirthDate, new { htmlAttributes = new { @class = "form-control", @data_format = "DD/MM/YYYY", data_template = "DD MM YYYY" } })
                                @Html.ValidationMessageFor(model => model.toddler.Person.BirthDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.toddler.Person.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.toddler.Person.Gender, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.toddler.Person.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="saveToddler">Save</button>
                </div>
            </div>
        </div>
    </div>
}
<div class="tab-pane active" id="a">
    <div id="toddlerList">
        @Html.Partial("_ListToddler", Model.toddlers)
    </div>
</div>
