@model IEnumerable<De_Tutjes.Models.AgreedDays>
@{
    int models = 0;
    if (Model != null)
    {
        models = Model.Count();
    }
    string completed = "fa-square-o";
    if (models >= 1) { completed = "fa-check-square-o"; }

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa @completed"></i> Opvangperiode</h3>
        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-12">

                    <div class="panel-group" id="accordionAgreedDays">
                        @{
                            int i = 1;
                            foreach (var agreedDays in Model)
                            {
                                string collapsed = "in";
                                if (models == 2)
                                {
                                    if (i == 1)
                                    {
                                        collapsed = "";
                                    }

                                }
                                string id = "ad" + agreedDays.AgreedDaysId;
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#@id">@Html.DisplayFor(model => agreedDays.StartDate) - @Html.DisplayFor(model => agreedDays.EndDate)</a></h4>
                                    </div>
                                    <div id="@id" class="panel-collapse collapse @collapsed">
                                        <div class="panel-body">
                                            <fieldset>
                                                <legend></legend>
                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Startdatum</label>
                                                    <div class="col-sm-10">
                                                        @Html.DisplayFor(model => agreedDays.StartDate)
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Einddatum</label>
                                                    <div class="col-sm-10">
                                                        @Html.DisplayFor(model => agreedDays.EndDate)
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                                i++;

                            }
                        }
                    </div>

                </div>

            </div>
            <div class="row">
                @{
                    string disabledCreate = "";
                    if (models == 2)
                    {
                        disabledCreate = "disabled";
                    }
                }
                <div class="col-md-1">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <a class="btn btn-primary btn-block btn-sm" role="button" href="#" data-toggle="modal" data-target="#addAgreedDaysModal" id="openAgreedDaysForm" @disabledCreate><i class="fa fa-calendar-plus-o"></i> Periode toevoegen</a>
                </div>

                <div class="col-md-3">
                </div>
                <div class="col-md-1">
                </div>
            </div>
        </div>
    </div>
}
