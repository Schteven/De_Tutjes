@model De_Tutjes.Models.Toddler
@{
    string disabledCreate = "";
    string completed = "fa-square-o";
    if (Model.ToddlerId != 0) {
        completed = "fa-check-square-o";
        disabledCreate = "disabled";
    }

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa @completed"></i> Kind</h3>
        </div>
        <div class="panel-body">
            <div class="row">
            @{
                if (Model.ToddlerId != 0)
                {
                    <div class="col-md-2">
                        <blockquote class="blockquote">
                            @{
                                if (Model.Person.Gender == "male")
                                {
                                    <img class="d-flex" src="~/Images/baby-boy.png" alt="boy" height="64" width="64">
                                }
                                else if (Model.Person.Gender == "female")
                                {
                                    <img class="d-flex" src="~/Images/baby-girl.png" alt="girl" height="64" width="64">
                                }
                                else
                                {
                                    <img class="d-flex" src="~/Images/stork.png" alt="unknown" height="64" width="64">
                                }
                            }
                        </blockquote>
                    </div>
                    <div class="col-md-10">
                        <h5 class="mt-0">@Html.DisplayFor(model => Model.Person.FirstName)</h5>
                        <div class="form-group row">
                            @Html.LabelFor(model => Model.Person.BirthDate, htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => Model.Person.BirthDate)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => Model.Person.Gender, htmlAttributes: new { @class = "col-md-2" })
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => Model.Person.Gender)
                            </div>
                        </div>
                    </div>
                                }
            }
            </div>

            <div class="row">
                <div class="col-md-1">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <a class="btn btn-primary btn-block btn-sm" role="button" href="#" data-toggle="modal" data-target="#addToddlerModal" id="openToddlerForm" @disabledCreate><i class='fa fa-user-plus'></i> Kind toevoegen</a>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-1">
                </div>
            </div>
        </div>
    </div>
}

