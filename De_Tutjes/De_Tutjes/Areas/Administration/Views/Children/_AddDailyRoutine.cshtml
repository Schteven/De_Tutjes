@model De_Tutjes.Areas.Administration.Models.CreateDailyRoutineAndImportantNotice

@using (Ajax.BeginForm("CreateDailyRoutine", null, new AjaxOptions { UpdateTargetId = "dailyRoutineList", OnSuccess = "submitDailyRoutineForm()" }, new { id = "AddDailyRoutineForm" }))
{

    @Html.AntiForgeryToken();

    <div class="modal fade" id="addDailyRoutineModal" tabindex="-1" role="dialog" aria-labelledby="addDailyRoutineLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addDailyRoutineLabel">
                        DailyRoutine @HttpContext.Current.Session["NewChildWizardSession"] toevoegen
                        <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </h5>
                </div>

                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.toddler.DailyRoutine, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.toddler.DailyRoutine, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.toddler.DailyRoutine, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="saveDailyRoutine">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@using (Ajax.BeginForm("CreateImportantNotice", null, new AjaxOptions { UpdateTargetId = "importantNoticeList", OnSuccess = "submitImportantNoticeForm()" }, new { id = "AddImportantNoticeForm" }))
